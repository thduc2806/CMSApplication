@model IEnumerable<AssigmentCode.Models.Admin>

@{
    ViewData["Title"] = "Index";
}

<div class="margin-horizontal">
	<a class="link-primary bold h4" asp-action="Index" asp-controller="Admins">Admins</a>
	<a class="link-secondary bold margin-left h4" asp-action="Index" asp-controller="Trainings">Trainings</a>
	<a class="link-secondary bold margin-left h4" asp-action="Index" asp-controller="Trainners">Trainners</a>
</div>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
