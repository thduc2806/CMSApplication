@{
    ViewData["Title"] = "Login";
}

<div class="container">

	<!-- Outer Row -->
	<div class="row justify-content-center">

		<div class="col-xl-10 col-lg-12 col-md-9">

			<div class="card o-hidden border-0 shadow-lg my-5">
				<div class="card-body p-0">
					<!-- Nested Row within Card Body -->
					<div class="row">
						<div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
						<div class="col-lg-6">
							<div class="p-5">
								<div class="text-center">
									<h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
								</div>
								<form class="user" method="post">
									<p class="text-danger" @ViewBag.IsLoginFail> Wrong Account !!! Please again Account !!!</p>
									<div class="form-floating mb-3 w-100">
										<select name="role" class="form-select" id="floatingSelectGrid" aria-label="Floating label select example">
											<option selected value="Admin">Admin</option>
											<option value="Training">Training</option>
											<option value="Trainner">Trainer</option>
										</select>
										<label for="floatingSelectGrid">Select roles</label>
									</div>
									<div class="form-group">
										<input type="text" class="form-control form-control-user @ViewBag.IsWrong"
											   id="floatingInputInvalid" name="username"
											   placeholder="Username">
									</div>
									<div class="form-group">
										<input type="password" class="form-control form-control-user @ViewBag.IsWrong" 
											   name="password" id="exampleInputPassword" placeholder="Password">
									</div>
									
									<div class="form-group">
										<div class="custom-control custom-checkbox small">
											<input type="checkbox" class="custom-control-input" id="customCheck">
											<label class="custom-control-label" for="customCheck">
												Remember
												Me
											</label>
										</div>
									</div>
									<input type="submit" class="btn btn-primary btn-user btn-block" value="Login">
									<hr>
								</form>
								<hr>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>

	</div>

</div>